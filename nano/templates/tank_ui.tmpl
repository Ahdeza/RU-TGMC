						<span class="red">{{:data.secd_gun_max_mags}}</span>
					{{/if}}
				</div>
				<div>
					{{:helper.link('Reload', null, {'reload' : '4'}, data.secd_gun_cur_mags ? null : 'disabled')}}
				</div>
				<br>
				<br>
				<div>
					{{if data.cd_secd_full > 5}}
						{{if data.cd_secd_left > 0}}
