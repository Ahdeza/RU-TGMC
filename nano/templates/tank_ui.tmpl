		{{else}}
			<div style="color: white; font-weight: bold">
				<h3><span class="white">Secondary weapon:</h3></span>
				<div style="float: left">
					{{:data.secd_gun_name}}
					| Ammo: 
					{{if data.secd_gun_cur_ammo > 0}}
						{{:data.secd_gun_cur_ammo}}
					{{else}}
						<span class="red">{{:data.secd_gun_cur_ammo}}</span>
					{{/if}}
					/
